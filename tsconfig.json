{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "util/**/*.ts",
    "schema/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
